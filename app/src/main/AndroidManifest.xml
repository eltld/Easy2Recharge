<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.technicus.easy2recharge">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.SplashScreen"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.RechargeActivity"
            android:label="@string/title_activity_recharge" />
        <activity
            android:name=".ui.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".ui.SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:parentActivityName=".ui.LoginActivity" />
        <activity
            android:name=".ui.ChangePasswordActivity"
            android:label="@string/title_activity_change_password"
            android:parentActivityName=".ui.RechargeActivity" />
        <activity
            android:name=".ui.OrderHistory"
            android:label="@string/title_activity_order_history"
            android:parentActivityName=".ui.RechargeActivity" />
        <activity
            android:name=".ui.EWalletActivity"
            android:label="@string/title_activity_ewallet"
            android:parentActivityName=".ui.RechargeActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ui.MyAccount"
            android:label="@string/title_activity_my_account"
            android:parentActivityName=".ui.RechargeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.technicus.easy2recharge.ui.RechargeActivity" />
        </activity>
        <activity
            android:name=".CouponSelection"
            android:label="@string/title_activity_coupon_selection" />
        <activity
            android:name=".ui.AddToWalletTransaction"
            android:label="@string/title_activity_add_to_wallet_transaction"></activity>
    </application>

</manifest>
